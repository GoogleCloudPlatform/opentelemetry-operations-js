{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-lib",
    "group:allNonMajor"
  ],
  "dependencyDashboard": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "typescript"
      ],
      "groupName": "typescript"
    },
    {
      "matchPackageNames": [
        "mocha",
        "ts-mocha",
        "@types/mocha"
      ],
      "groupName": "mocha"
    },
    {
      "groupName": "opentelemetry upstream",
      "matchPackageNames": [
        "@opentelemetry/{/,}**"
      ]
    },
    {
      "groupName": "nx",
      "matchPackageNames": [
        "@nx/{/,}**",
        "nx{/,}**"
      ]
    },
    {
      "matchPackageNames": [
        "fastify"
      ],
      "groupName": "fastify"
    }
  ]
}
